{
  "name": "reservation-server",
  "version": "1.0.0",
  "description": "SSE-based reservation system server with Prisma",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npx prisma generate",
    "postinstall": "npx prisma generate",
    "deploy": "npx prisma db push --accept-data-loss && node server.js",
    "migrate": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "npx prisma db seed",
    "studio": "npx prisma studio",
    "health": "curl http://localhost:$PORT/health || curl http://localhost:3001/health",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "nodejs",
    "express",
    "prisma",
    "sse",
    "reservations",
    "real-time"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@prisma/client": "^5.7.1",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "your-repo-url"
  }
}